<!doctype html>
<html lang="fr">
<head>
  <meta charset="utf-8">
  <title>{% block title %}{% endblock %}</title>
  <link rel="stylesheet/less" type="text/css" href="/style/base.less">
  <script src="https://cdn.jsdelivr.net/npm/less" ></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

</head>
<body>
  <div class="header" >
    <div id="header_flexbox">
      <a href="/" id="img_home_anchor">
        <img src="https://cdn.discordapp.com/attachments/891090590048075786/1051513212899704852/nikke-db.png" alt="logo Anga"/>
      </a>
      <form method="get" action="/products">
        <input type="text" name="title" class="form-control" placeholder="{{language['searchManga']}}">
      </form>
      <div class="action_icons">
        <a href="/cart">
          <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
            <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
          </svg>
        </a>
        <span class="dropdown dropdown_trigger">
            <svg  class="svg_dropdown svghover" data-bs-toggle="dropdown" xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
              <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
              <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
            </svg>
            {% if user %}
              {{user.username}}
            {% endif %}
          <ul class="dropdown-menu">
            {% if user %}
            <li><a class="dropdown-item" href="/profile">{{language["profile"]}}</a></li>
            <li><a class="dropdown-item" href="/history">{{language["orders"]}}</a></li>
            <li><a class="dropdown-item" href="/logoff">{{language["logoff"]}}</a></li>
            {% else %}
            <li><a class="dropdown-item" href="/login">{{language["login"]}}</a></li>
            <li><a class="dropdown-item" href="/register">{{language["register"]}}</a></li>
            {% endif %}
          </ul>
        </span>
        {% if user.role == "ADMIN" %}
        <span class="dropdown dropdown_trigger">
            <svg xmlns="http://www.w3.org/2000/svg" class="svghover" data-bs-toggle="dropdown" width="40" height="40" fill="currentColor" class="bi bi-gear" viewBox="0 0 16 16">
              <path d="M8 4.754a3.246 3.246 0 1 0 0 6.492 3.246 3.246 0 0 0 0-6.492zM5.754 8a2.246 2.246 0 1 1 4.492 0 2.246 2.246 0 0 1-4.492 0z"/>
              <path d="M9.796 1.343c-.527-1.79-3.065-1.79-3.592 0l-.094.319a.873.873 0 0 1-1.255.52l-.292-.16c-1.64-.892-3.433.902-2.54 2.541l.159.292a.873.873 0 0 1-.52 1.255l-.319.094c-1.79.527-1.79 3.065 0 3.592l.319.094a.873.873 0 0 1 .52 1.255l-.16.292c-.892 1.64.901 3.434 2.541 2.54l.292-.159a.873.873 0 0 1 1.255.52l.094.319c.527 1.79 3.065 1.79 3.592 0l.094-.319a.873.873 0 0 1 1.255-.52l.292.16c1.64.893 3.434-.902 2.54-2.541l-.159-.292a.873.873 0 0 1 .52-1.255l.319-.094c1.79-.527 1.79-3.065 0-3.592l-.319-.094a.873.873 0 0 1-.52-1.255l.16-.292c.893-1.64-.902-3.433-2.541-2.54l-.292.159a.873.873 0 0 1-1.255-.52l-.094-.319zm-2.633.283c.246-.835 1.428-.835 1.674 0l.094.319a1.873 1.873 0 0 0 2.693 1.115l.291-.16c.764-.415 1.6.42 1.184 1.185l-.159.292a1.873 1.873 0 0 0 1.116 2.692l.318.094c.835.246.835 1.428 0 1.674l-.319.094a1.873 1.873 0 0 0-1.115 2.693l.16.291c.415.764-.42 1.6-1.185 1.184l-.291-.159a1.873 1.873 0 0 0-2.693 1.116l-.094.318c-.246.835-1.428.835-1.674 0l-.094-.319a1.873 1.873 0 0 0-2.692-1.115l-.292.16c-.764.415-1.6-.42-1.184-1.185l.159-.291A1.873 1.873 0 0 0 1.945 8.93l-.319-.094c-.835-.246-.835-1.428 0-1.674l.319-.094A1.873 1.873 0 0 0 3.06 4.377l-.16-.292c-.415-.764.42-1.6 1.185-1.184l.292.159a1.873 1.873 0 0 0 2.692-1.115l.094-.319z"/>
        </svg>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/admin/history">{{language["updateOrders"]}}</a></li>
            <li><a class="dropdown-item" href="/mangaEdit">{{language["updateMangas"]}}</a></li>
          </ul>
        </span>
        {% endif %}
        <select class="form-select" id="language_select">
          <option value="FR" 
            {% if language["key"] == "FR" %}
              selected
            {% endif %}>
             FR
          </option>
          <option value="EN" 
            {% if language["key"] == "EN" %}
              selected
            {% endif %}>
            EN
          </option>
        </select>
      </div>
    </div>
  </div>

    {% block body %}{% endblock %}
    
    <script src="/js/language_switch.js"></script>
    
</body>
</html>