{% extends 'base.html.twig' %}

{% block title %}Edit manga{% endblock %}

{% block body %}
    
    {% for manga in mangas %}
        <h1>Modification série ({{manga.title}})</h1>

    <div>
        <form>
            <div class="mb-3 col-3">                
                <button type="button" class="btn btn-success">Nouveau volume</button>
                <button type="button" class="btn btn-danger">Rendre la série invisible</button>
            </div>
        </form>
    </div>


    <div class="mb-3 col-12">
    <form action="" method="get" class="form-example">
        <div>
            <h5></h5>
            <label for="name">Modification titre</label>
                <input type="text" id="name" name="name" value="{{manga.title}}">
        </div>
        <div>
            <h5></h5>
            <label for="name">Modification couverture</label>
                <input type="text" id="name" name="name" value="{{manga.common_cover}}">
        </div>
        <div>
            <label for="name">Modification description</label>
                <textarea id="name" name="name" rows="4" cols="50" required>
                    {{manga.description}}
                </textarea>
        </div>
        <div >
            <label for="name">Modification categorie</label>
                <input type="text" id="name" name="name" value="{{manga.category}}">
        </div>
        <div >
            <label for="name">Modification auteur</label>
                <input type="text" id="name" name="name" value="{{manga.author}}">
        </div>
        <div>
            <label for="name">Modification artiste</label>
                <input type="text" id="name" name="name" value="{{manga.artist}}" >
        </div>
        <input type="submit" class="btn btn-primary"></input>
    </form>
    </div>
    <br>
        <hr>
    <br>

    {% endfor %}

{% endblock %}
