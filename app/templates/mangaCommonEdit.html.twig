{% extends 'base.html.twig' %}

{% block title %}Edit manga{% endblock %}

{% block body %}
    
    {% for manga in mangas %}

    <section class="container-fluid">
        <h1>Modification série ({{manga.title}})</h1>

        <div>
            <form>
                <div class="mb-3 col-3">                
                    <button type="button" class="btn btn-success">Nouveau volume</button>
                    <button type="button" class="btn btn-danger">Rendre la série invisible</button>
                </div>
            </form>
        </div>

{# 
<input class="form-control form-control-lg" type="text" placeholder=".form-control-lg" aria-label=".form-control-lg example">
<input class="form-control" type="text" placeholder="Default input" aria-label="default input example">
<input class="form-control form-control-sm" type="text" placeholder=".form-control-sm" aria-label=".form-control-sm example"> #}


        <form action="" method="get" class="row g-3">
            <label for="name">Modification titre</label>
                <input class="form-control" type="text" id="name" name="name" value="{{manga.title}}">

            <label for="name">Modification couverture</label>
                <input class="form-control" type="text" id="name" name="name" value="{{manga.common_cover}}">

            <label for="name">Modification description</label>
                <textarea class="form-control" id="name" name="name" rows="4" cols="50" required>
                    {{manga.description}}
                </textarea>

            <label for="name">Modification categorie</label>
                <input class="form-control" type="text" id="name" name="name" value="{{manga.category}}">

            <label for="name">Modification auteur</label>
                <input class="form-control" type="text" id="name" name="name" value="{{manga.author}}">

            <label for="name">Modification artiste</label>
                <input class="form-control" type="text" id="name" name="name" value="{{manga.artist}}">

            <input type="submit" class="btn btn-primary"></input>
        </form>
    </section>

    {% endfor %}

{% endblock %}
