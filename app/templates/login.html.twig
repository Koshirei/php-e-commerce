{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    
    <div class="container" id="login_form">
    &nbsp;
        <form method="post" action="/login">
            <h1>{{language["login"]}}</h1><br/>

            <label class="form-label">{{language["username"]}} : </label><br/>
            <input class="form-control" type="text" placeholder="{{language["username"]}}" name="username"><br/>

            <label class="form-label">{{language["password"]}} : </label><br/>
            <input class="form-control" type="password" placeholder="{{language["password"]}}" name="password"><br/>

            <div class="text-center">
                <input type="submit" class="btn btn-primary" value="{{language["submit"]}}">
            </div>


        {% if error %}
        <br/><br/>
            <div class="alert alert-danger container" role="alert" >
                {{language["fail_login"]}}
            </div>
        {% endif %}
        </form>


    </div>


{% endblock %}
